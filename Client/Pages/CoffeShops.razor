@page "/coffeeshops"

<h3>
    Shops
</h3>

<div class="row">
    @if (Shops.Any())
    {
        @foreach (var shop in Shops)
        {
            <div class="col-md-6 mh-25 mb-4">
                <card class="card shadow-sm rounded">
                    <div class="card-body">
                        <div class="card-title">
                            <b>
                                @shop.Name
                            </b>
                        </div>
                        <p class="card-text">
                            @shop.Address
                        </p>
                    </div>

                    <div class="card-footer text-muted">
                        <b>
                            @shop.OpeningHours
                        </b>
                    </div>
                </card>
            </div>
        }
    }
    else
    {
        <p>
            DataAcess Is Loading
        </p>
    }
</div>